	-- Если условие не выполняется, запись добавляется в таблицу 
	IF s_name = v_name AND s_zip_code = v_zip_code THEN
		RAISE EXCEPTION unique_violation USING MESSAGE = 'Значение "'||v_name||'" уже существует в таблице!';
